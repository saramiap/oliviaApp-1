{
  "name": "olivia-app-commands",
  "description": "Commandes rapides pour Olivia APP",
  "scripts": {
    "install:all": "npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "start:production": "cd backend && npm start",
    "clean:all": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd frontend && rm -rf node_modules package-lock.json",
    "clean:backend": "cd backend && rm -rf node_modules package-lock.json",
    "fix:npm": "./fix-npm-issues.sh",
    "setup:env": "cp frontend/.env.example frontend/.env && touch backend/.env",
    "lint:frontend": "cd frontend && npm run lint",
    "check:health": "curl -f http://localhost:3000/health || echo 'Backend not running'"
  },
  "commands": {
    "Développement": {
      "Démarrer Frontend": "npm run dev:frontend",
      "Démarrer Backend": "npm run dev:backend",
      "Démarrer les deux": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\""
    },
    "Installation": {
      "Installer tout": "npm run install:all",
      "Réparer NPM": "npm run fix:npm",
      "Configuration initiale": "npm run setup:env"
    },
    "Production": {
      "Build": "npm run build:frontend",
      "Démarrer": "npm run start:production"
    },
    "Maintenance": {
      "Nettoyer": "npm run clean:all",
      "Vérifier santé": "npm run check:health"
    }
  }
}